<% layout("/layouts/boilerplate") -%>

    <body>
        <!-- added cliet side verification novalidate needs validations -->
        <div class="row mt-3">
            <div class="col-8 offset-2 ">
                <h1>Create a new listing</h1>
                <form action="/listings" method="post" novalidate class="needs-validation"
                    enctype="multipart/form-data">
                    <div class="mb-3"><label for="title" class="form-label">Title</label>
                        <input class="form-control" name="listing[title]" placeholder="Title" required>
                        <div class="valid-feedback">Title looks good! </div>
                        <div class="invalid-feedback">Please enter a title.</div>
                    </div>
                    <div class="mb-3"><label for="description" class="form-label">Description</label>
                        <textarea class="form-control" name="listing[description]" placeholder="enter description"
                            required></textarea>
                        <div class="valid-feedback">Description looks good! </div>
                        <div class="invalid-feedback">Please enter a description.</div>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Image</label>
                        <input type="file" class="form-control" name="listing[image]" required>
                        <div class="valid-feedback">Image URL looks good! </div>
                        <div class="invalid-feedback">Please enter an image URL.</div>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-4">
                            <label for="price" class="form-label">Price</label>
                            <input class="form-control" name="listing[price]" placeholder="Price in INR" type="number"
                                required>
                            <div class="valid-feedback">Price looks good! </div>
                            <div class="invalid-feedback">Please enter a price.</div>
                        </div>
                        <div class="mb-3 col-8">
                            <label for="country" class="form-label">Country</label>
                            <input class="form-control" name="listing[country]" placeholder="Country" required>
                            <div class="valid-feedback">Country looks good! </div>
                            <div class="invalid-feedback">Please enter a country.</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input class="form-control" name="listing[location]" placeholder="Location" required>
                        <div class="valid-feedback">Location looks good! </div>
                        <div class="invalid-feedback">Please enter a location.</div>
                    </div>
                    <div class="mb-3">
                        <label for="category" class="form-label">Category</label>
                        <select class="form-select" name="listing[category]" id="category" required>
                            <option value="" disabled selected>Select a category</option>
                            <option value="beach">Beach</option>
                            <option value="lake">Lake</option>
                            <option value="mountain">Mountain</option>
                            <option value="cabin">Cabin</option>
                            <option value="villa">Villa</option>
                            <option value="arctic">Arctic</option>
                            <option value="forest">Forest</option>
                            <option value="desert">Desert</option>
                            <option value="city">City</option>
                            <option value="campfire">Campfire</option>
                            <option value="snow">Snow</option>
                            <option value="hotel">Hotel</option>
                        </select>
                        <div class="valid-feedback">Category looks good!</div>
                        <div class="invalid-feedback">Please select a category.</div>
                    </div>
                    <button class="btn btn-dark add-btn mt-3" type="submit">Create</button>
                    <br><br>
                </form>
            </div>
        </div>
    </body>